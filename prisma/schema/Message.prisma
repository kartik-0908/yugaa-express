model Message {
  id             String       @id @default(uuid())
  conversationId String
  timestamp      DateTime     @default(now())
  senderId       Int
  text           String
  senderType     String
  unanswered     Boolean      @default(false)
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}
