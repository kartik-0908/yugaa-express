model User {
  id            String    @id @default(uuid())
  email         String    @unique
  firstName     String?
  lastName      String?
  lastLoginAt   DateTime?
  shopDomain    String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  role          String?
}

model InvitedUser {
  id                String   @id @default(uuid())
  email             String   @unique
  role              String
  shopDomain        String
  invitationToken   String   @unique
  invitationSentAt  DateTime @default(now())
  invitationExpires DateTime
  verified          Boolean  @default(false)

  @@unique([shopDomain, email])
}

model ShopifyInstalledShop {
  id               String   @id @default(uuid())
  shop             String   @unique
  accessToken      String?
  email            String[]
  adminInviteCode  String   @default(uuid())
  memberInviteCode String   @default(uuid())
  autoAssignment   Boolean  @default(true)
}

model Customer {
  id         String  @id @default(uuid())
  shopDomain String
  firstName  String
  lastName   String
  email      String
  deleted    Boolean @default(false)

  @@unique([shopDomain, email])
}
